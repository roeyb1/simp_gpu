    "version": "0.2.0",
    "configurations": [
        {
            "name": "Basic - Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic.exe",
            "args": [
            ],
            "console":"integratedTerminal",
            "logging": {
                "moduleLoad": true,
                "trace": true
            },
            "visualizerFile": "${workspaceFolder}/.vscode/jai.natvis",
            "cwd": "${workspaceRoot}/examples",
        },
        {
            "name": "Basic - Unix",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic",
            "args": [ ],
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/examples"
            },
            "cwd": "${workspaceFolder}/examples"
        }
    ]
